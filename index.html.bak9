    // Initialize Case Study Carousel
    let currentCaseIndex = 0;
    
    function updateCaseStudy(index) {
      const caseData = caseStudies[index];
      const card = document.querySelector('.case-study-card');
      
      // Update media
      const videoEl = card.querySelector('.case-study-video');
      const imageEl = card.querySelector('.case-study-image');
      const playOverlay = card.querySelector('.case-study-play-overlay');
      const caption = card.querySelector('.case-study-caption');
      
      if (caseData.hasVideo) {
        videoEl.src = caseData.video;
        videoEl.style.display = 'block';
        imageEl.style.display = 'none';
        playOverlay.style.display = 'flex';
        caption.textContent = caseData.caption;
        caption.style.display = 'block';
      } else {
        imageEl.src = caseData.image;
        imageEl.style.display = 'block';
        videoEl.style.display = 'none';
        playOverlay.style.display = 'none';
        caption.style.display = 'none';
      }
      
      // Update content
      card.querySelector('.case-study-quote').textContent = `"${caseData.quote}"`;
      card.querySelector('.case-study-author').textContent = `- ${caseData.author}, ${caseData.role}`;
      
      // Update metrics
      const metricsContainer = card.querySelector('.case-study-metrics');
      metricsContainer.innerHTML = caseData.metrics.map(metric => `
        <div>
          <div style="font-size: 48px; font-weight: var(--font-weight-bold); color: var(--color-primary); line-height: 1; margin-bottom: var(--spacing-sm);">${metric.value}</div>
          <div style="font-size: 14px; color: var(--color-text); line-height: 1.4;">${metric.label}</div>
        </div>
      `).join('');
      
      // Update link
      card.querySelector('.case-study-link').href = caseData.link;
      
      // Update tabs
      document.querySelectorAll('.case-study-tab').forEach((tab, i) => {
        if (i === index) {
          tab.classList.add('active');
          tab.style.color = 'var(--color-text)';
          tab.style.borderBottomColor = 'var(--color-primary)';
        } else {
          tab.classList.remove('active');
          tab.style.color = 'var(--color-text-secondary)';
          tab.style.borderBottomColor = 'transparent';
        }
      });
      
      // Update navigation buttons
      const prevBtn = document.querySelector('.case-study-nav-prev');
      const nextBtn = document.querySelector('.case-study-nav-next');
      prevBtn.disabled = index === 0;
      nextBtn.disabled = index === caseStudies.length - 1;
      
      if (prevBtn.disabled) {
        prevBtn.style.opacity = '0.5';
        prevBtn.style.cursor = 'not-allowed';
      } else {
        prevBtn.style.opacity = '1';
        prevBtn.style.cursor = 'pointer';
      }
      
      if (nextBtn.disabled) {
        nextBtn.style.opacity = '0.5';
        nextBtn.style.cursor = 'not-allowed';
      } else {
        nextBtn.style.opacity = '1';
        nextBtn.style.cursor = 'pointer';
      }
    }
    
    // Tab click handlers
    document.querySelectorAll('.case-study-tab').forEach((tab, index) => {
      tab.addEventListener('click', () => {
        currentCaseIndex = index;
        updateCaseStudy(currentCaseIndex);
      });
    });
    
    // Navigation button handlers
    document.querySelector('.case-study-nav-prev').addEventListener('click', () => {
      if (currentCaseIndex > 0) {
        currentCaseIndex--;
        updateCaseStudy(currentCaseIndex);
      }
    });
    
    document.querySelector('.case-study-nav-next').addEventListener('click', () => {
      if (currentCaseIndex < caseStudies.length - 1) {
        currentCaseIndex++;
        updateCaseStudy(currentCaseIndex);
      }
    });
    
    // Video play handler
    document.querySelector('.case-study-play-overlay').addEventListener('click', function() {
      const video = document.querySelector('.case-study-video');
      if (video.paused) {
        video.play();
        this.style.display = 'none';
      }
    });
    
    // Initialize with first case
    updateCaseStudy(0);
  </script>

